<div class="bg-gray-200 w-full rounded px-6 flex flex-col justify-center items-center">
  <div class="w-full my-4">
    <h2 class="text-3xl font-bold text-center">Search Autocomplete</h2>
  </div>
  <div class="w-full flex flex-row justify-center items-center">
    <div class="w-full mb-4">
      <%= form_with do |f| %>
        <!-- search bar START -->
        <%= f.text_field :search_term, placeholder: "Search for person by name", class: "w-full rounded text-2xl" %>
        <!-- search bar END -->
      <% end %> 
    </div>
  </div>
</div>
