<div class="w-full px-6 flex flex-col justify-center items-center">
  <%= form_with method: :get, class: "w-full flex flex-col justify-center items-center" do |f| %>
    <!-- search field START -->
    <div class="bg-white relative w-full max-w-screen-sm rounded-md shadow flex flex-row justify-start items-center mb-2">
      <%= f.text_field :search_term, placeholder: "Enter first name...", class: "rounded-md focus:outline-none border-none w-full full py-4 text-base antialiased" %>
      <div class="absolute right-0 flex flex-row justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-slate-600 mx-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>
    <!-- search field END -->

    <!-- autocomplete results START -->
    <div class="bg-white relative w-full max-w-screen-sm rounded-md shadow flex flex-row justify-start items-center">
      <div style="min-height: 200px;" class="rounded-md focus:outline-none w-full full pt-2 flex flex-col justify-center items-center">
        <h2 class="py-2 leading-none text-base text-left font-bold bg-gray-200 text-gray-900 w-full pl-6">Users</h2>
        <% 7.times do %>
          <a class="text-gray-900 leading-none hover:bg-violet-600 hover:text-white w-full font-normal py-5 pl-6 text-base" href="/"><span class="font-bold">Mi</span>chael</a>
        <% end %>
      </div>
    </div>
    <!-- autocomplete results END -->
  <% end %> 
</div>
